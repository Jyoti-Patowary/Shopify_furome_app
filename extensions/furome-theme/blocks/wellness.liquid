  <script>
    // Simulate data fetching (between 10% to 100%)
    const progressBar = document.getElementById("progress-bar");
    const tooltip = document.getElementById("tooltip");
  
    let currentProgress = 10; // Starting point
  
    function updateProgressBar() {
      progressBar.style.width = currentProgress + "%";
      tooltip.textContent = currentProgress + "%";
      tooltip.style.opacity = 1;
    }
  
    // Simulate data fetching and update the progress bar
    function simulateDataFetching() {
      const interval = setInterval(function () {
        currentProgress += 5; // Increase the progress by 5% in this example
        if (currentProgress > 10) {
          clearInterval(interval);
        }
        updateProgressBar();
      }, 1000); // Adjust the interval and update as needed
    }
  
    simulateDataFetching();
  </script>
  